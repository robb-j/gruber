{
	"$comment": "This is for node-based TypeScript checking only",
	"compilerOptions": {
		"target": "ESNext",
		"module": "Preserve",
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"erasableSyntaxOnly": true,
		"strict": true,
		"noEmit": true
	},
	"include": [
		"core",
		"node",
		"bundle/node",
		"examples/node",
		"http",
		"testing",
		"config"
	]
}
